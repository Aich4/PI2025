<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.CalendarController"
      spacing="10"
      style="-fx-background-color: white; -fx-background-radius: 15;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 2);">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Filter Posts by Date"
           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333333;"
           alignment="CENTER"/>

    <HBox alignment="CENTER" spacing="10">
        <ListView fx:id="reclamationListView" prefHeight="300.0" prefWidth="400.0"/>

        <Button fx:id="prevButton" text="&lt;"
                style="-fx-background-color: transparent; -fx-text-fill: #666666;"/>
        <Label fx:id="monthYearLabel"
               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <Button fx:id="nextButton" text="&gt;"
                style="-fx-background-color: transparent; -fx-text-fill: #666666;"/>
    </HBox>

    <GridPane fx:id="calendarGrid" hgap="5" vgap="5" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
        </columnConstraints>
    </GridPane>

    <VBox spacing="5" alignment="CENTER">
        <Label fx:id="selectedDateRangeLabel"
               style="-fx-font-size: 12; -fx-text-fill: #666666;"
               text="No date filter"/>
        <Button fx:id="clearFilterButton" text="Clear Filter"
                style="-fx-background-color: transparent; -fx-text-fill: #666666;
                       -fx-border-color: #dee2e6; -fx-border-radius: 15;"/>
    </VBox>
</VBox>