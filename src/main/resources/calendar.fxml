<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CalendarController">
   <children>
      <ImageView fitHeight="800.0" fitWidth="1200.0">
         <image>
            <Image url="@bg.jpeg" />
         </image>
      </ImageView>

      <!-- Logo -->
      <ImageView fitHeight="45.0" fitWidth="157.0" layoutX="20.0" layoutY="20.0">
         <image>
            <Image url="@LOGO.png" />
         </image>
      </ImageView>

      <!-- Contenu principal -->
      <VBox layoutX="20.0" layoutY="90.0" spacing="20">
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Retour" onAction="#retour" 
                    style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-weight: bold;"/>
         </HBox>

         <HBox spacing="20">
            <!-- Calendrier -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 2);">
               <padding>
                  <Insets top="15" right="15" bottom="15" left="15"/>
               </padding>

               <Label text="Filtrer par date" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

               <HBox alignment="CENTER" spacing="10">
                  <Button fx:id="prevButton" text="&lt;" style="-fx-background-color: transparent; -fx-text-fill: #666666;"/>
                  <Label fx:id="monthYearLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                  <Button fx:id="nextButton" text="&gt;" style="-fx-background-color: transparent; -fx-text-fill: #666666;"/>
               </HBox>

               <GridPane fx:id="calendarGrid" hgap="5" vgap="5" alignment="CENTER">
                  <columnConstraints>
                     <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
                     <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
                     <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
                     <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
                     <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
                     <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
                     <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28"/>
                  </columnConstraints>
               </GridPane>

               <VBox spacing="5" alignment="CENTER">
                  <Label fx:id="selectedDateRangeLabel" style="-fx-font-size: 12; -fx-text-fill: #666666;"/>
                  <Button fx:id="clearFilterButton" text="Effacer le filtre" 
                          style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-border-color: #dee2e6; -fx-border-radius: 15;"/>
               </VBox>
            </VBox>

            <!-- Liste des réclamations -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 2);">
               <padding>
                  <Insets top="15" right="15" bottom="15" left="15"/>
               </padding>

               <HBox spacing="15" alignment="CENTER_LEFT">
                  <Label text="Type" style="-fx-font-family: 'MoonetDEMO-Regular'; -fx-font-size: 23.0;" prefWidth="100"/>
                  <Label text="Contenu" style="-fx-font-family: 'MoonetDEMO-Regular'; -fx-font-size: 23.0;" prefWidth="200"/>
                  <Label text="Date" style="-fx-font-family: 'MoonetDEMO-Regular'; -fx-font-size: 23.0;" prefWidth="150"/>
                  <Label text="État" style="-fx-font-family: 'MoonetDEMO-Regular'; -fx-font-size: 23.0;" prefWidth="100"/>
               </HBox>

               <ListView fx:id="reclamationListView" VBox.vgrow="ALWAYS" 
                        style="-fx-background-color: white; -fx-border-color: #4682B4; -fx-border-width: 2px; -fx-border-radius: 5px;"/>
            </VBox>
         </HBox>
      </VBox>
   </children>
</AnchorPane>