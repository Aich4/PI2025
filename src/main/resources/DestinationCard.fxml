<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.DestinationCard"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="5" style="-fx-border-color: black; -fx-padding: 10;">
        <ImageView fx:id="destinationImage" fitWidth="200" fitHeight="120"/>
        <Label fx:id="nameLabel" text="Destination Name" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="descriptionLabel" text="Short description..." wrapText="true"/>
        <Label fx:id="ratingLabel" text="⭐ 4.5" style="-fx-text-fill: gold;"/>
    </VBox>
</AnchorPane>
