<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="689.0" prefWidth="938.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.listReclamation">
    <children>
        <ImageView fitHeight="789.0" fitWidth="1158.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@bg.jpeg" />
            </image>
        </ImageView>

        <VBox layoutX="1.0" layoutY="3.0" prefHeight="765.0" prefWidth="223.0" style="-fx-background-color: #ffffff;" styleClass="sidebar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <!-- Logo Section -->
                <VBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="58.0" fitWidth="190.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@LOGO.png" />
                        </image>
                    </ImageView>
                    <Separator/>
                </VBox>

                <!-- Navigation Menu -->
                <VBox spacing="15" styleClass="nav-menu">
                    <padding>
                        <Insets top="20"/>
                    </padding>
                    <Label text="Navigation" styleClass="nav-header">
                        <font>
                            <Font name="Cambria Math" size="22.0" />
                        </font>
                    </Label>

                    <!-- Stats Button -->
                    <HBox styleClass="nav-item" alignment="CENTER_LEFT" spacing="10">
                        <ImageView fitHeight="25" fitWidth="25">
                            <image>
                                <Image url="@stat.png" />
                            </image>
                        </ImageView>
                        <Button text="Statistiques" onAction="#showStatistics" 
                                style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    </HBox>

                    <!-- Responses Button -->
                    <HBox styleClass="nav-item" alignment="CENTER_LEFT" spacing="10">
                        <ImageView fitHeight="25" fitWidth="25">
                            <image>
                                <Image url="@webbb.png" />
                            </image>
                        </ImageView>
                        <Button fx:id="basculeReponse" onAction="#basculeReponse" 
                                text="Voir RÃ©ponses" 
                                style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
            </children>
            <effect>
                <DropShadow/>
            </effect>
        </VBox>

        <!-- Main Content -->
        <VBox layoutX="264.0" layoutY="20.0" spacing="20" styleClass="main-content">
            <!-- Search Bar and Filter -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Rechercher..." 
                          prefWidth="200" styleClass="search-field"/>
                <ComboBox fx:id="triComboBox" promptText="Trier par..." 
                         prefWidth="150" styleClass="filter-combo"/>
            </HBox>

            <!-- List View -->
            <ListView fx:id="listRec" prefHeight="405.0" prefWidth="790.0" 
                     styleClass="custom-list-view"/>
        </VBox>
    </children>
</AnchorPane>
