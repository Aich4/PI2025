{% extends 'base.html.twig' %}

{% block title %}Connexion - TrekSwap{% endblock %}

{% block body %}
<section class="vh-100" style="padding-top: 100px;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form method="post" class="needs-validation" novalidate>
                            <h3 class="mb-5">Connexion</h3>

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                </div>
                            {% endif %}

                            <div class="form-outline mb-4">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                                    class="form-control" placeholder="Votre email" required autofocus>
                                <div class="invalid-feedback">
                                    Veuillez saisir une adresse email valide
                                </div>
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" name="password" id="inputPassword" 
                                    class="form-control" placeholder="Votre mot de passe" required>
                                <div class="invalid-feedback">
                                    Veuillez saisir votre mot de passe
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">
                                Se connecter
                            </button>

                            <hr class="my-4">

                            <div>
                                <p class="mb-0">Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="text-primary fw-bold">S'inscrire</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
// Validation des formulaires Bootstrap
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })
})()
</script>
{% endblock %} 