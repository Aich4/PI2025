{% extends 'base-back.html.twig' %}

{% block title %}Liste des Destinations{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container py-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-primary">Liste des Destinations</h1>
                <a href="{{ path('addDestination') }}" class="btn btn-outline-primary">+ Ajouter une Destination</a>
            </div>

            <div class="mb-3">
                <input type="text" id="search-input" class="form-control" placeholder="Rechercher une destination...">
            </div>

            {% if destinations|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                            <th>Température</th>
                            <th>Note</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for destination in destinations %}
                            <tr>
                                <td>{{ destination.id }}</td>
                                <td>{{ destination.nomDestination }}</td>
                                <td>{{ destination.description|length > 50 ? destination.description|slice(0, 50) ~ '...' : destination.description }}</td>
                                <td>
                                    <img src="{{ destination.imageDestination }}" alt="Image" class="img-thumbnail" style="max-width: 100px;">
                                </td>
                                <td>{{ destination.latitude }}</td>
                                <td>{{ destination.longitude }}</td>
                                <td>{{ destination.temperature }}°C</td>
                                <td>{{ destination.rate }}/5</td>
                                <td>
                                    <a href="{{ path('editDest', {'id': destination.id}) }}" class="btn btn-sm btn-outline-success">Modifier</a>
                                    <a href="{{ path('deleteDest', {'id': destination.id}) }}"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette destination ?');">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info mt-4">
                    Aucun destination trouvée.
                </div>
            {% endif %}
        </div>
    </main>

    <script>
        // Optional: client-side search filter (basic)
        document.getElementById('search-input').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
{% endblock %}
