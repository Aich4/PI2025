{% extends 'base.html.twig' %}

{% block welcome %}
    <h1 class="text-center mt-5 mb-4 fw-bold">ðŸŒŸ Nos Missions</h1>
{% endblock %}

{% block body %}
    <style>
        /* Style dÃ©jÃ  prÃ©sent */
        .btn-login-to-validate {
            background-color: #789ebf;
            color: white;
            font-size: 15px;
            font-weight: 600;
            padding: 6px 90px;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
            letter-spacing: 0.3px;
            width: auto;
        }

        .btn-login-to-validate:hover {
            background-color: #84a2bc;
            box-shadow: 0 6px 20px rgba(37, 99, 235, 0.4);
            transform: translateY(-1px);
        }

        body {
            background-color: #f4f6fa;
        }

        .mission-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
        }

        .mission-card {
            background: linear-gradient(135deg, #ffffff, #f1f3f8);
            border-radius: 18px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease-in-out;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
            border: 1px solid #e0e5ee;
        }

        .mission-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 45px rgba(0, 0, 0, 0.15);
        }

        .mission-card h5 {
            font-size: 1.15rem;
            font-weight: 600;
            color: #222;
            margin-bottom: 18px;
        }

        .mission-card .details {
            font-size: 0.95rem;
            color: #444;
            line-height: 1.7;
            margin-bottom: 20px;
        }

        .empty-message {
            text-align: center;
            color: #999;
            font-size: 18px;
            margin-top: 40px;
        }

        input[type="file"] {
            font-size: 0.9rem;
            margin-bottom: 10px;
        }
    </style>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <main class="container py-5">
        <div class="mission-grid">
            {% for mission in missions %}
                <div class="mission-card">
                    <div>
                        <h5>{{ mission.description }}</h5>
                        <p class="details">
                            <strong>Statut :</strong> {{ mission.statut }}<br>
                            <strong>Points :</strong> {{ mission.pointsRecompense }} pts<br>
                            <strong>RÃ©compense :</strong> {{ mission.idRecompense.description ?? 'Aucune' }}
                        </p>
                    </div>

                    {% if app.user %}
                        {% if mission.statut != 'valide' %}
                            <form method="post" action="{{ path('app_mission_valider', {id: mission.id}) }}" enctype="multipart/form-data">
                                <input type="file" name="preuve" accept="image/*" required class="form-control mb-2">

                                <!-- Ajout du champ reCAPTCHA -->
                                <div class="g-recaptcha" data-sitekey="{{ app.request.server.get('EWZ_RECAPTCHA_SITE_KEY') }}"></div>

                                <button type="submit" class="btn btn-login-to-validate">ðŸ“· Valider la mission</button>
                            </form>
                        {% else %}
                            <button class="btn btn-success" disabled>âœ… Mission validÃ©e</button>
                        {% endif %}
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-login-to-validate">
                            Connexion requise pour valider
                        </a>
                    {% endif %}
                </div>
            {% else %}
                <p class="empty-message">Aucune mission disponible pour le moment.</p>
            {% endfor %}
        </div>
    </main>

{% endblock %}
