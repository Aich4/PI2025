{% extends 'base-back.html.twig' %}

{% block title %}Modifier une Catégorie{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container mt-5">
            <h1 class="text-center mb-4 text-warning">Modifier la Catégorie</h1>

            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group">
                {{ form_label(form.logo) }}
                {% if category.getLogo() %}
                    <div class="mb-3">
                        <label>Logo actuel :</label>
                        <img src="{{ asset('uploads/logos/' ~ category.getLogo()) }}" alt="Logo actuel" width="100">
                    </div>
                {% else %}
                    <p>Aucun logo actuel.</p>
                {% endif %}
                {{ form_widget(form.logo, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.logo) }}
            </div>

            <div class="form-group">
                {{ form_label(form.nbrPartenaire) }}
                {{ form_widget(form.nbrPartenaire, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nbrPartenaire) }}
            </div>

            <button type="submit" class="btn btn-success mt-3">Mettre à jour</button>

            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
