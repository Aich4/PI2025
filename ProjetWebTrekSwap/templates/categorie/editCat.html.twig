{% extends 'base-back.html.twig' %}

{% block title %}Modifier une Catégorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-warning">Modifier une Catégorie</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.logo) }}
                    {{ form_widget(form.logo, {'attr': {'class': 'form-control'}}) }}
                    {% if categorie.logo %}
                        <div class="mt-2">
                            <img src="{{ asset('uploads/logos/' ~ categorie.logo) }}" alt="Logo actuel" style="max-width: 200px;">
                        </div>
                    {% endif %}
                    {{ form_errors(form.logo) }}
                </div>

                <div class="form-group mb-4">
                    {{ form_label(form.nbrPartenaire) }}
                    {{ form_widget(form.nbrPartenaire, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nbrPartenaire) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning">Modifier</button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}