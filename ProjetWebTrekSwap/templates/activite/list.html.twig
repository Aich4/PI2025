{% extends 'base-back.html.twig' %}

{% block title %}Liste des Activités{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container py-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-primary">Liste des Activités</h1>
                <a href="{{ path('add_activite') }}" class="btn btn-outline-primary">+ Ajouter une Activité</a>
            </div>

            <div class="mb-3">
                <input type="text" id="search-input" class="form-control" placeholder="Rechercher une activité...">
            </div>

            {% if activites|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Date</th>
                            <th>Heure</th>
                            <th>Statut</th>
                            <th>Destination</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for activite in activites %}
                            <tr>
                                <td>{{ activite.id }}</td>
                                <td>{{ activite.nomActivite }}</td>
                                <td>{{ activite.date ? activite.date|date('Y-m-d') : 'N/A' }}</td>
                                <td>{{ activite.heure }}</td>
                                <td>
                                    {% set statut = activite.statut %}
                                    {% if statut == 'active' %}
                                        <span class="badge bg-success text-uppercase">{{ statut }}</span>
                                    {% elseif statut == 'inactive' %}
                                        <span class="badge bg-danger text-uppercase">{{ statut }}</span>
                                    {% elseif statut == 'completed' %}
                                        <span class="badge bg-primary text-uppercase">{{ statut }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ statut }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ activite.idDestination ? 'Destination #' ~ activite.idDestination : 'N/A' }}
                                </td>
                                <td>
                                    <a href="{{ path('edit_activite', {'id': activite.id}) }}" class="btn btn-sm btn-outline-success">Modifier</a>
                                    <a href="{{ path('delete_activite', {'id': activite.id}) }}"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette activité ?');">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info mt-4">
                    Aucune activité trouvée.
                </div>
            {% endif %}
        </div>
    </main>

    <script>
        // Recherche simple côté client
        document.getElementById('search-input').addEventListener('input', function () {
            const value = this.value.toLowerCase();
            document.querySelectorAll('tbody tr').forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(value) ? '' : 'none';
            });
        });
    </script>
{% endblock %}
