{% extends 'base-back.html.twig' %}

{% block title %}Modifier un Partenaire{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container mt-5">
            <h1 class="text-center mb-4 text-primary">Modifier un Partenaire</h1>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.nom) }}</div>
            </div>

            <div class="mb-3">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.email) }}</div>
            </div>

            <div class="mb-3">
                {{ form_label(form.adresse) }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.adresse) }}</div>
            </div>

            <div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="text-danger">{{ form_errors(form.description) }}</div>
            </div>

            <div class="mb-3">
                {{ form_label(form.date_ajout) }}
                {{ form_widget(form.date_ajout, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.date_ajout) }}</div>
            </div>

            {% if form.id_categorie is defined %}
                <div class="mb-3">
                    {{ form_label(form.id_categorie) }}
                    {{ form_widget(form.id_categorie, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.id_categorie) }}</div>
                </div>
            {% endif %}

            <div class="text-center mt-4 d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-success w-25 py-2">
                    ✅ Mettre à jour
                </button>
                <a href="{{ path('list_partenaire') }}" class="btn btn-secondary w-25 py-2">
                    ↩️ Retour à la liste
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
