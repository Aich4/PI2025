{% extends 'base.html.twig' %}

{% block title %}Liste des Réclamations{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Réclamations</h1>

        <a href="{{ path('app_reclamation_new') }}" class="btn btn-primary mb-3">Créer une nouvelle réclamation</a>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>État</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for reclamation in reclamations %}
                <tr>
                    <td>{{ reclamation.idrec }}</td>
                    <td>{{ reclamation.descriptionRec }}</td>
                    <td>{{ reclamation.dateRec ? reclamation.dateRec|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ reclamation.typeRec }}</td>
                    <td>{{ reclamation.etatRec }}</td>
                    <td>
                        <a href="{{ path('app_reclamation_show', {'id_rec': reclamation.idrec}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_reclamation_edit', {'id_rec': reclamation.idrec}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune réclamation trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}