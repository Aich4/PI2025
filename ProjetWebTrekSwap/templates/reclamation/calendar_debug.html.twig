{% extends 'base-back.html.twig' %}

{% block title %}Débogage du Calendrier{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .json-data {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            font-family: monospace;
            white-space: pre-wrap;
            margin-bottom: 20px;
        }
        .reclamation-list {
            margin-top: 20px;
        }
        .reclamation-item {
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        .bg-en-cours {
            background-color: #fff3cd;
        }
        .bg-resolue {
            background-color: #d1e7dd;
        }
        .bg-rejetee {
            background-color: #f8d7da;
        }
    </style>
{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Débogage du Calendrier</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('reclamationBack') }}">Réclamations</a></li>
                    <li class="breadcrumb-item active">Débogage Calendrier</li>
                </ol>
            </nav>
        </div>

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Données JSON des Événements</h5>
                            <div class="json-data">{{ events|raw }}</div>
                            
                            <h5 class="card-title">Liste des Réclamations</h5>
                            <div class="reclamation-list">
                                {% for reclamation in reclamations %}
                                    <div class="reclamation-item bg-{{ reclamation.etatRec|lower|replace({' ': '-'}) }}">
                                        <h6>ID: {{ reclamation.idRec }}</h6>
                                        <p><strong>Description:</strong> {{ reclamation.descriptionRec }}</p>
                                        <p><strong>Date:</strong> {{ reclamation.dateRec ? reclamation.dateRec|date('Y-m-d H:i:s') : '' }}</p>
                                        <p><strong>Type:</strong> {{ reclamation.typeRec }}</p>
                                        <p><strong>État:</strong> {{ reclamation.etatRec }}</p>
                                    </div>
                                {% else %}
                                    <div class="alert alert-info">Aucune réclamation trouvée.</div>
                                {% endfor %}
                            </div>
                            
                            <div class="text-center mt-4">
                                <a href="{{ path('app_reclamation_calendar_simple') }}" class="btn btn-primary">Voir le calendrier</a>
                                <a href="{{ path('reclamationBack') }}" class="btn btn-secondary">Retour aux réclamations</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %} 